@import url('https://fonts.googleapis.com/css?family=Lora&display=swap')

body
	margin 0
	font-family Lora, Montserrat, -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale

code
	font-family source-code-pro, Menlo, Monaco, Consolas, 'Courier New', monospace

.App
	text-align center
	height 100vh
	background-color #282c34
	display flex
	flex-direction column
	align-items center
	justify-content center
	color white

.App-logo
	height 40vmin

.App-header
	min-height 100vh
	font-size calc(16px + 2vmin)

.App-link
	color #09d3ac

.editable
	background none
	border none
	display inline-block
	color white
	font unset
	width auto
	border-bottom 1px dashed darkgrey

.icon
	/* padding: 12px 16px 16px 16px;
	background: #c5c5c5; */
	padding 16px
	background #23262b
	border-radius 50%
	width 96px
	height 96px
	display block

@media screen and (max-width: 350px)
	.editable
		text-align center
